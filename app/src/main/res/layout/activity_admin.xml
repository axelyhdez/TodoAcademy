<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Administrador"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/roboto"
                android:textSize="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos curso"
                    android:fontFamily="@font/roboto"
                    android:textSize="25sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginVertical="10sp"/>

                <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15sp"
                app:cardBackgroundColor="@color/blue4">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="10sp">
                        <!--Nombre-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nombre:"
                                android:textSize="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="-10sp"
                                />
                            <EditText
                                android:id="@+id/etnombreC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nombre del curso"
                                android:background="@drawable/edit_text_border"
                                android:textSize="20sp"
                                android:padding="8sp"
                                android:textColorHint="#adb5bd"
                                android:fontFamily="@font/roboto"
                                android:layout_marginVertical="15sp"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                        <!--Sesiones y duración-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="-15sp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginRight="8sp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Sesiones:"
                                    android:textSize="20sp"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="-10sp"
                                    />
                                <EditText
                                    android:id="@+id/sesionesC"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Sesiones"
                                    android:background="@drawable/edit_text_border"
                                    android:textSize="20sp"
                                    android:padding="8sp"
                                    android:textColorHint="#adb5bd"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginVertical="15sp"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Duración:"
                                    android:textSize="20sp"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="-10sp"
                                    />
                                <EditText
                                    android:id="@+id/duracionC"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Duración"
                                    android:background="@drawable/edit_text_border"
                                    android:textSize="20sp"
                                    android:padding="8sp"
                                    android:textColorHint="#adb5bd"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginVertical="15sp"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <!--Modalidad y certificador-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="-15sp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginRight="8sp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Modalidad:"
                                    android:textSize="20sp"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="-10sp"
                                    />
                                <EditText
                                    android:id="@+id/modalidadC"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Modalidad"
                                    android:background="@drawable/edit_text_border"
                                    android:textSize="20sp"
                                    android:padding="8sp"
                                    android:textColorHint="#adb5bd"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginVertical="15sp"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Certificador:"
                                    android:textSize="20sp"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="-10sp"
                                    />
                                <EditText
                                    android:id="@+id/certificadorC"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Certificador"
                                    android:background="@drawable/edit_text_border"
                                    android:textSize="20sp"
                                    android:padding="8sp"
                                    android:textColorHint="#adb5bd"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginVertical="15sp"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <!--Dirigido-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="-16sp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dirigido a:"
                                android:textSize="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="-10sp"
                                />
                            <EditText
                                android:id="@+id/dirigidoC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Dirigido a"
                                android:background="@drawable/edit_text_border"
                                android:textSize="20sp"
                                android:padding="8sp"
                                android:textColorHint="#adb5bd"
                                android:fontFamily="@font/roboto"
                                android:layout_marginVertical="15sp"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                        <!--Aprenderás-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="-16sp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Aprenderás:"
                                android:textSize="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="-10sp"
                                />
                            <EditText
                                android:id="@+id/aprenderasC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Aprenderás"
                                android:background="@drawable/edit_text_border"
                                android:textSize="20sp"
                                android:padding="8sp"
                                android:textColorHint="#adb5bd"
                                android:fontFamily="@font/roboto"
                                android:layout_marginVertical="15sp"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                        <!--Objetivo-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="-16sp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Objetivo:"
                                android:textSize="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="-10sp"
                                />
                            <EditText
                                android:id="@+id/objetivoC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Objetivo"
                                android:background="@drawable/edit_text_border"
                                android:textSize="20sp"
                                android:padding="8sp"
                                android:textColorHint="#adb5bd"
                                android:fontFamily="@font/roboto"
                                android:layout_marginVertical="15sp"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                        <!--Categoria-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="-16sp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Categoria:"
                                android:textSize="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="-0sp"
                                />
                            <Spinner
                                android:id="@+id/categoriaSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="66dp"
                                android:layout_marginBottom="20sp"/>
                        </LinearLayout>
                        <!--Botón agregar curso-->
                        <Button
                            android:id="@+id/agregarC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aceptar"
                            android:layout_gravity="right"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>